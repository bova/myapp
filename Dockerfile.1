# syntax=docker/dockerfile:1.4
# FROM --platform=$BUILDPLATFORM python:3.10-alpine AS builder

FROM centos:7

WORKDIR /myapp

COPY requirements.txt /myapp

RUN yum install -y \
    python3.7 \
    python3-pip

RUN pip3 install -r requirements.txt

COPY . /myapp

ENTRYPOINT ["python3"]
CMD ["main.py"]
